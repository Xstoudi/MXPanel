        link(href="../css/manage.css" rel="stylesheet")
    body
        header
            nav
                ul
                    li
                        a(href="#") Overview
                    li
                        a(href="#") Users Management
        div(id="user-list" class="list-group")
            h2 Users List
            div(class="list-group-item")
                span(href="#") Admin
                button(class="btn btn-danger")
                    i(class="fa fa-trash")
            div(class="list-group-item")
                span(href="#") Xavier
                button(class="btn btn-danger")
                    i(class="fa fa-trash")
        div(id="manage-btn-control")
            h2 Add an user
            div(class="input-group" id="new-user-input")
                input(type="text" class="form-control" placeholder="Username")
                div(class="btn-group" id="domain-selection")
                    button(type="button" class="btn" id="domain-selection-button") Domaine
                    button(type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                        span(class="caret")
                        span(class="sr-only") Toggle Dropdown
                    ul(class="dropdown-menu")
                        li
                            a(href="#") idleweiss.ch
                        li
                            a(href="#") divtec.ch
            div(class="input-group" id="password")
                input(type="password" class="form-control" palceholder="Password")
                span(class="input-group-addon")
                    i(class="fa fa-key fa-fw")
            div(class="input-group" id="password-repeat")
                input(type="password" class="form-control" placeholder="Repeat Password")
                span(class="input-group-addon")
                    i(class="fa fa-key fa-fw")
            button(class="btn btn-success") Add
            
        script(src="../vendors/jquery.js")
        script(src="../vendors\bootstrap-3.3.5-dist\bootstrap-3.3.5-dist\js\bootstrap.min.js")
